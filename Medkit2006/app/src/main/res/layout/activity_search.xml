<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <ImageButton
        android:id="@+id/go_back_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/search_header"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="12dp"
        android:background="#615D5D"
        android:backgroundTint="#D1CDCD"
        android:text="Search"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/go_back_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/search_nearby_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#555454"
        android:text="Nearby"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_header" />

    <TextView
        android:id="@+id/search_hist_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="Search History"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_nearby_btn" />

    <ScrollView
        android:id="@+id/search_hist_scroll"
        android:layout_width="379dp"
        android:layout_height="309dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_hist_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <EditText
        android:id="@+id/search_txt"
        android:layout_width="328dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_hist_scroll" />

    <ImageButton
        android:id="@+id/search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:lyaout_mariginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/search_hist_scroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_menu_search"
        tools:layout_editor_absoluteX="349dp" />

    <TextView
        android:id="@+id/sortby_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:lyaout_mariginLeft="12dp"
        android:text="Sort By"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/search_txt" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:lyaout_mariginLeft="12dp"
        app:layout_constraintTop_toBottomOf="@+id/sortby_header"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="11dp">

        <RadioButton
            android:id="@+id/alphabet_sort_btn"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Alphabet" />

        <RadioButton
            android:id="@+id/rating_sort_btn"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Rating" />

        <RadioButton
            android:id="@+id/Nearest"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Alphabetically" />
    </RadioGroup>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="245dp"
        android:layout_height="31dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.764"
        app:layout_constraintStart_toEndOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@id/search_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>